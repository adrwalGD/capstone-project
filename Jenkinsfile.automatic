pipeline {
  agent any

  stages {
    stage('Checkout Code') {
        steps {
            checkout scm
        }
    }

    stage('Terraform Init') {
      steps {
        dir('terraform-prod') {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Apply') {
      steps {
        dir('terraform-prod') {
          sh "terraform plan"
        }
      }
    }
  }
}
